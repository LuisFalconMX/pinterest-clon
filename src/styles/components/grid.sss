.grid
  width: calc(100% - 20px)
  height: calc(800px - 20px)
  padding: 10px
  margin: 30px auto
  display: grid
  grid-template-columns: repeat(auto-fill, 236px)
  grid-auto-rows: 200px
  grid-gap: 10px
  justify-content: space-evenly

.grid__item
  max-width: 100%
  width: 100%
  height: 100%
  object-fit: cover
  border-radius: 10px
  box-shadow: 0 0 10px rgba(0,0,0,0.2)

.grid__item--1
  grid-row: span 1

.grid__item--2
  grid-row: span 2